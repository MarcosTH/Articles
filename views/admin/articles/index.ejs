<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Artigos</h2>
    <a class="btn btn-success" href="/admin/articles/new">Cadastrar novo artigo

    </a>
    <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id </th>
                    <th>Title </th>
                    <th>Slug </th>
                    <th>Categoria </th>
                    <th>Ações </th>

                </tr>
            </thead>
            <tbody>
                <% articles.forEach(article => { %>
                 <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.category.title %></td>
                    <td>
                        <a href="/admin/articles/edit/<%= article.id%>" class="btn btn-warning">Editar</a>
                        <form method="POST" action="/articles/delete" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                        <input type="hidden" name="id" value="<%= article.id %>">
                        <button class="btn btn-danger">Deletar</button>
                        </form><br>
                    </td>
                </tr>

                    <% }) %>
               
            </tbody>

        </table>

</div>



<script>
function confirmarDelecao(event, form){

    event.preventDefault();
  var decision =  confirm("Tem certeza que deseja deletar este artigo");
    if(decision){
        form.submit();
    }

}

</script>